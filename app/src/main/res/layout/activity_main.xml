<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.spec.broadcastreceiversms.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <!--basic linear layout to organize our stuff left to right-->

         <ListView
            android:id="@+id/listview"
            android:layout_below="@+id/iv_class"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"/>
        <!--  This ListView is all we need to show the contents,
          we'll use it by calling its id in Java -->

        <WebView
            android:id="@+id/webview"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="0.5"/>
        <!--  This WebView will show the selected website -->

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
